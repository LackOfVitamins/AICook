{
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "ReverseProxy": {
      "Routes": {
        "recipe": {
          "ClusterId": "recipe",
          "CorsPolicy": "cors",
          "Match": {
            "Path": "/api/recipe/{**catch-all}"
          },
          "Transforms": [
            { 
              "PathPattern": "recipe/{**catch-all}" 
            }
          ]
        },
        "frontend": {
          "ClusterId": "frontend",
          "Match": {
            "Path": "{**catch-all}"
          }
        }
      },
      "Clusters": {
        "recipe": {
          "Destinations": {
            "destination1": {
              "Address": "http://recipe-service:5010/"
            }
          }
        },
        "frontend": {
          "Destinations": {
            "destination1": {
              "Address": "http://frontend:3000"
            }
          }
        }
      }
    }
  }
  